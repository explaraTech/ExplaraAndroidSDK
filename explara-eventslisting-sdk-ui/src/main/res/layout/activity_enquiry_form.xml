<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.explara_core.login.ui.LoginActivity"
    android:id="@+id/rsvp_form_activity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/enquiry_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dadada"
        android:text="We hear you !"
        style="@style/textViewBookFontStyle"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="16sp"
        android:textColor="#212121"
        android:gravity="center" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_textview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme">

                <EditText
                    android:id="@+id/enquiry_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_textview_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme">

                <EditText
                    android:id="@+id/enquiry_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email Id"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_textview_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme">

                <EditText
                    android:id="@+id/enquiry_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:inputType="phone"

                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_textview_enquiry"
                android:layout_width="match_parent"
                android:animateLayoutChanges="true"
                android:layout_height="match_parent"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme">

                <EditText
                    android:id="@+id/enqiry_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Your Query"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="true" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/submit_enquiry_btn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/reacharge_btn"
        android:text="Submit Enquiry"
        android:textColor="@color/color_white"
        android:textAllCaps="false"

        />


</LinearLayout>







