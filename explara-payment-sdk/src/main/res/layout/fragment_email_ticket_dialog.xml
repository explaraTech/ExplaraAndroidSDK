<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context="com.explara.android.payment.ui.ConfirmationOnlineActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/textViewBookFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ticket_confirmation"
        android:layout_centerHorizontal="true"
        android:text="Enter comma(',') separated multiple email ids"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/accentColor"
        android:textSize="15sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/emailid_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewBookFontStyle"
            android:textSize="14sp"
            android:textColor="#000000"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="5"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"

            />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email_text_input"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dismiss_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/white"
            android:text="Dismiss"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/email_tickets"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/white"
            android:text="Send"
            android:textColor="#000000"
            android:textSize="14sp" />


    </LinearLayout>


</RelativeLayout>
