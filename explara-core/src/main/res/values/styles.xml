    <!--  Edit text theme in Login & Signup -->
    <style name="EditTextLoginTheme" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">#80ffffff</item>
        <item name="android:textSize">18sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">#99ffffff</item>
        <item name="colorControlActivated">@color/style_color_default_yellow_topic</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>

    </style>


    <style name="NewEditTextLoginSingupErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#fcc42b</item>
    </style>

    <style name="AttendeeFormErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/accentColor</item>
    </style>

    <!--  Edit text theme in RSVP form -->
    <style name="RsvpFormTheme" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">#9a9999</item>
        <item name="android:textSize">18sp</item>

        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">#9a9999</item>
        <item name="colorControlActivated">#1f2224</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>

    </style>

    <style name="Theme.SelectCityDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:windowNoTitle">false</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/color_white</item>

    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EdittextWalletTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/wallet_edittext_hint</item>
        <item name="android:editTextColor">#212121</item>
        <item name="android:textColor">@color/wallet_textinput_hint_color</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
        <item name="android:textSize">14sp</item>
    </style>

