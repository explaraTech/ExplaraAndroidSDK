    </style>
-->
    <style name="InlineFormTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/hint_normal</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="EnquiryFormErrorText" parent="@style/TextAppearance.AppCompat">

        <item name="android:textColorHint">@color/hint_normal</item>
    </style>

    <style name="EnquiryFormHintAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/hint_focus_color</item>
        <item name="android:textColor">#c2c2c2</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <!--  New Edit text theme in new Login & new Signup -->
    <style name="NewEditTextLoginSingupTheme" parent="AppTheme.Widget.TextView">
        //hint color And Label Color in False State
        <item name="android:textColorHint">#80ffffff</item>
        <item name="android:textSize">15sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/color_white</item>
        <item name="colorControlNormal">#cd8383</item>
        <item name="colorControlActivated">@color/color_white</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>


    <style name="TextAppearance.TextInputLayout.Red" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/hint_error_color</item>
        <item name="android:textColorHint">@color/hint_normal</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>

