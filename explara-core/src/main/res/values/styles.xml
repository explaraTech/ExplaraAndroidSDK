        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="explaraTextStyle24" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="explaraTextStyle22" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="explaraTextStyle18" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>


    <!--  Default text style in Ticket page -->
    <style name="explaraTextStyleTicketPage" parent="@style/explaraTextStyle24">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>


