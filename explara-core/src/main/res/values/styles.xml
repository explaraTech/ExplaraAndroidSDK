<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_back_red</item>-->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:buttonStyle">@style/buttonMediumFontStyle</item>

        <!--<item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/hint_normal</item>
        <item name="colorControlActivated">@color/hint_focus_color</item>-->



    </style>


    <!--<style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>-->

    <!-- FONT CUSTOMIZATION -->
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/GOTHAMNARROW_MEDIUM.otf</item>
    </style>

    <style name="textViewMediumFontStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/GOTHAMNARROW_MEDIUM.otf</item>
    </style>

    <style name="textViewBookFontStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>


    <style name="textViewBookFontStyleForRadioButtonFilter" parent="@style/textViewBookFontStyle">
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="textViewBoldFontStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/GOTHAMNARROW_BOLD.otf</item>
    </style>


    <style name="buttonMediumFontStyle" parent="Base.Widget.AppCompat.Button">
        <item name="fontPath">fonts/GOTHAMNARROW_MEDIUM.otf</item>
    </style>



    <style name="buttonBookFontStyle" parent="Base.Widget.AppCompat.Button">
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="lato_black" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato_Black.ttf</item>
    </style>

    <style name="lato_regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato_Regular.ttf</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#9ca5ad</item>
        <item name="colorControlActivated">#9ca5ad</item>
        <item name="colorControlHighlight">#fcc32c</item>
        <item name="android:textColor">#9ca5ad</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="android:colorActivatedHighlight">#fcc32c</item>
    </style>


    <style name="AccentColorYelloTheme" parent="AppTheme">
        <item name="colorAccent">#fcc32c</item>
        <item name="colorControlNormal">#9ca5ad</item>
        <item name="colorControlActivated">#9ca5ad</item>
        <item name="colorControlHighlight">#fcc32c</item>
        <item name="android:textColor">#9ca5ad</item>
        <item name="android:textColorHint">#9ca5ad</item>
    </style>

    <style name="NoStatusBarTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accentColor</item>

    </style>


    <!-- ToolBar Style -->
    <style name="myToolbarStyle" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">26sp</item>
        <item name="homeAsUpIndicator">@null</item>
    </style>


    <!-- Explara Text Styles -->
    <style name="explaraTextStyle50" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="android:textSize">33sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="explaraTextStyle36" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="fontPath">fonts/GOTHAMNARROW_BOOK.otf</item>
    </style>

    <style name="explaraTextStyle30" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_default_text_color</item>
        <item name="android:textSize">20sp</item>
