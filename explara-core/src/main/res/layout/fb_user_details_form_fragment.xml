    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/buyername_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme"
                >

                <EditText
                    android:id="@+id/buyernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="16sp"
                    android:hint="Full Name"
                    android:textColor="#1f2224"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/buyeremail_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme"
                >

                <EditText
                    android:id="@+id/buyeremailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                   />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/buyermobile_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/EnquiryFormHintAppearance"
                app:errorTextAppearance="@style/TextAppearance.TextInputLayout.Red"
                style="@style/InlineFormTheme"
                >

                <EditText
                    android:id="@+id/buyermobileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"

                    android:inputType="phone"
                    />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rsvp_confirm_button"
                android:background="@color/colorPrimary"
                android:text="Proceed"
                android:textColor="@color/color_white"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"

                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>







