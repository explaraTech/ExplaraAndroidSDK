<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_verification_activity_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ui.ForgotPasswordWithOutNavActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_verfication_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/code_verification_edit_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Code"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:visibility="visible" />

            <!--style="@style/EditTextSettingsTheme"-->

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/resend_code_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:text="Resend Verification Code"
            android:textColor="@color/accentColor" />

        <Button
            android:id="@+id/verifyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:text="Verify"
            android:textAllCaps="false"
            android:background="@drawable/signup_btn_bg"
            android:textColor="@android:color/white" />




    </LinearLayout>

</RelativeLayout>
